<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: avar.xml,v 1.23 2015/09/29 11:10:18 revo Exp $">
<kap><ofc>*</ofc>
<rad>avar</rad>/a</kap>
<drv mrk="avar.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc mrk="avar.0a.feticxisma">
    <dif>
      Feti&ccirc;isme <ref tip="super" cel="sxpar.0ema">&scirc;parema</ref>,
      pasie kolektanta hava&jcirc;ojn kaj doma&gcirc;anta &gcirc;in uzi:
      <ekz>
        mal&scirc;parulo &gcirc;uas nelonge, <tld/>ulo neniam
        <fnt><bib>PrV</bib></fnt>
      </ekz>
    </dif>
    <rim>
      Homo <tld/>a ofte estas <ref cel="avid.0a">avida</ref>, sed
      iuj estas avidaj (akiremaj) kaj mal<tld/>aj.
    </rim>
  </snc>
  <snc mrk="avar.0a.egoisma">
    <dif>
      Egoisme <ref tip="super" cel="sxpar.0ema">&scirc;parema</ref>:
      <ekz>
        li estas mal&scirc;parema pri siaj kapricoj, sed tre <tld/>a kiam
        temas pri la publika bono.
      </ekz>
    </dif>
  </snc>
  <snc mrk="avar.0a.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Tro &scirc;parema pri io:
      <ekz>
        <tld/>a je helpo, pri la&ubreve;doj.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_k;&c_u;&c_p;&c_y;</trd>,
    <trd>&c_s;&c_k;&c_n;&c_a;&c_r;&c_l;&c_ib;&c_v;&c_y;</trd>,
    <trd>&c_p;&c_r;&c_a;&c_g;&c_n;&c_y;</trd>,
    <trd>&c_h;&c_c;&c_ib;&c_v;&c_y;</trd>
  </trdgrp>
  <trdgrp lng="br">
    <trd>pizh<klr tip="ind"> (na foran ket)</klr></trd>,
    <trd>skragn</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>lakom&yacute;</trd>,
    <trd>lakotn&yacute;</trd>
  </trdgrp>
  <trd lng="de">geizig</trd>
  <trdgrp lng="en">,
    <trd>avaricious</trd>,
    <trd>miserly</trd>,
    <trd>stingy</trd>,
    <trd>niggardly</trd>,
    <trd>greedy</trd>
  </trdgrp>
  <trd lng="es">avaro</trd>
  <trd lng="fr">avare</trd>
  <trdgrp lng="hu">
    <trd>f&ouml;sv&eacute;ny</trd>,
    <trd>fukar</trd>,
    <trd>sz&udblac;kmark&uacute;</trd>,
    <trd>kuporgat&oacute;</trd>
  </trdgrp>
  <trd lng="it">avaro</trd>
  <trd lng="nl">gierig</trd>
  <trd lng="pt">avarento</trd>
  <trd lng="ru">&c_s;&c_k;&c_u;&c_p;&c_o;&c_j;</trd>
  <trd lng="sk">lakom&yacute;</trd>
</drv>

<drv mrk="avar.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Esti avara pri, agi <tld/>e pri io:
      <ekz>
        patroj <tld/>as, infanoj mal&scirc;paras
        <fnt><bib>PrV</bib></fnt>
      </ekz>
      <ekz>
        <tld/>i al iu nutra&jcirc;on<fnt>B</fnt>,
        karesojn<fnt>B</fnt>;
      </ekz>
      <ekz>
        <tld/>i la la&ubreve;dojn, helpon.
      </ekz>
    </dif>
  </snc>
  <refgrp tip="sin">
    <ref cel="domagx.0i.avari">doma&gcirc;i</ref>,
    <ref cel="sxpar.0i.moderi">&scirc;pari</ref>
  </refgrp>
  <ref tip="vid" cel="avid.0i">avidi</ref>
  <trdgrp lng="be">
    <trd>&c_s;&c_k;&c_u;&c_p;&c_ib;&c_c;&c_c;&c_a;</trd>,
    <trd>&c_s;&c_k;&c_n;&c_a;&c_r;&c_y;&c_c;&c_c;&c_a;</trd>,
    <trd>&c_p;&c_r;&c_a;&c_g;&c_n;&c_u;&c_c;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="br">
    <trd>beza&ntilde; <ind>pizh</ind></trd>,
    <trd>beza&ntilde; <ind>skragn</ind></trd>
  </trdgrp>
  <trd lng="de">geizen</trd>
  <trdgrp lng="en">
    <trd>be <ind>greedy</ind></trd>,
    <trd>stint</trd>,
    <trd>penny-pinch</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>&ecirc;tre <ind>avare</ind> (de)</trd>,
    <trd>rationner<klr tip="ind"> (par avarice)</klr></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>fukarkodik</trd>,
    <trd>f&ouml;sv&eacute;nykedik</trd>,
    <trd>zsugorgat</trd>
  </trdgrp>
  <trd lng="it">lesinare</trd>
  <trd lng="nl">karig zijn met</trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_k;&c_u;&c_p;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_zh;&c_a;&c_l;&c_je;&c_t;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>by&tcaron; sk&uacute;py</trd>,
    <trd>&zcaron;grlo&scaron;i&tcaron;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>lakotit</trd>,
    <trd>skrblit</trd>
  </trdgrp>
</drv>

<drv mrk="avar.mal0a">
  <kap>mal<tld/>a</kap>
  <snc>
    <dif>
      Facile donanta:
      <ekz>
        pri havo najbara <klr>(de najbaro)</klr> oni estas mal<tld/>a
        <fnt><bib>PrV</bib></fnt>
      </ekz>
      <ekz>
        mal<tld/>a je promesoj.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_sh;&c_ch;&c_o;&c_d;&c_r;&c_y;</trd>
  <trd lng="br">brokus</trd>
  <trd lng="cs">&scaron;t&ecaron;dr&yacute;</trd>
  <trd lng="de">freigiebig</trd>
  <trd lng="en">generous</trd>
  <trd lng="es">generoso</trd>
  <trdgrp lng="fr">
    <trd>g&eacute;n&eacute;reux</trd>,
    <trd>large<klr tip="ind"> (g&eacute;n&eacute;reux)</klr></trd>,
    <trd>prodigue</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>b&odblac;kez&udblac;</trd>,
    <trd>adakoz&oacute;</trd>,
    <trd>t&eacute;kozl&oacute;</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>generoso</trd>,
    <trd>prodigo</trd>,
    <trd>munifico</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>vrijgevig</trd>,
    <trd>gul</trd>
  </trdgrp>
  <trd lng="ru">&c_shch;&c_je;&c_d;&c_r;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>radodajn&yacute;</trd>,
    <trd>&scaron;tedr&yacute;</trd>
  </trdgrp>
</drv>
</art>
