<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: rezon.xml,v 1.19 2015/12/19 23:10:15 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>rezon</rad>/i <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="rezon.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="rezon.0i.LOG">
    <dif>
      <ref cel="logik.0a">Logike</ref> kunmeti 
      argumentojn kaj tiri el ili <ref cel="konklu.0o">konkludon</ref>:
      <ekz>
        analogie <tld/>i;
      </ekz>
      <ekz>
        <tld/>ado kaj filozofado panon ne donas
         <fnt><bib>PrV</bib></fnt>
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="dialek1.0o">dialektiko</ref>,
      <ref cel="pruv.0i">pruvi</ref>.
    </refgrp>
  </snc>
  <trd lng="be">&c_r;&c_a;&c_z;&c_v;&c_a;&c_zh;&c_a;&c_c;&c_mol;</trd>
  <trd lng="bg">&c_r;&c_a;&c_z;&c_s;&c_malmol;&c_zh;&c_d;&c_a;&c_v;&c_a;&c_m;</trd>
  <trdgrp lng="cs">
    <trd>p&rcaron;en. vymlouvat se</trd>,
    <trd>usuzovat</trd>,
    <trd>uva&zcaron;ovat</trd>,
    <trd>vyvozovat</trd>
  </trdgrp>
  <trdgrp lng="de">
     <trd>vern&uuml;nftig <ind>denken</ind></trd>,
     <trd>vern&uuml;nftig <ind>urteilen</ind></trd>,
     <trd>schlie&szlig;en</trd>,
     <trd>folgern</trd>
  </trdgrp>
  <trd lng="en">reason<klr> (with logic)</klr></trd>
  <trd lng="es">razonar</trd>
  <trdgrp lng="fa">
    <trd>&a_A;&a_s;&a_t;&a_d;&a_l;&a_A;&a_l; &f_k;&a_r;&a_d;&a_n;</trd>,
    <trd>&a_t;&a_ayn;&a_q;&a_l; &f_k;&a_r;&a_d;&a_n;</trd>
  </trdgrp>
  <trd lng="fr">raisonner</trd>
  <trdgrp lng="hu">
    <trd>&eacute;rvel</trd>,
    <trd>okoskodik</trd>
  </trdgrp>
  <trd lng="nl">redeneren</trd>
  <trd lng="pt">raciocinar</trd>
  <trd lng="ru">&c_r;&c_a;&c_s;&c_s;&c_u;&c_zh;&c_d;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="sk">
    <trd>usudzova&tcaron; <klr>(urobi&tcaron; z&aacute;ver pod&lcaron;a logickej
    argument&aacute;cie)</klr></trd>,
    <trd>uva&zcaron;ova&tcaron;</trd>,
    <trd>vyvodzova&tcaron;</trd>
  </trdgrp>
</drv>

<drv mrk="rezon.0o">
  <kap><tld/>o</kap>
  <snc mrk="rezon.0o.LOG">
    <dif>
      Serio de interdependaj
      <ref cel="argume.0o.LOG">argumentoj</ref>,
      per kiu oni provas atingi <ref cel="konklu.0o">konkludon</ref>.
    </dif> 
  </snc>
  <trd lng="bg">&c_r;&c_a;&c_z;&c_s;&c_malmol;&c_zh;&c_d;&c_a;&c_v;&c_a;&c_n;&c_je;</trd>
  <trdgrp lng="cs">
    <trd>uva&zcaron;ov&aacute;n&iacute;</trd>,
    <trd>vyvozov&aacute;n&iacute;</trd>
  </trdgrp>
  <trd lng="de">Schlu&szlig;folgerung</trd>
  <trd lng="en">reasoning</trd>
  <trdgrp lng="fa">
    <trd>&a_d;&a_l;&f_y;&a_l;</trd>,
    <trd>&a_b;&a_r;&a_h;&a_A;&a_n;</trd>
  </trdgrp>
  <trd lng="fr">raisonnement</trd>
  <trd lng="nl">redenering</trd>
  <trdgrp lng="sk">
    <trd>uva&zcaron;ovanie</trd>,
    <trd>vyvodzovanie</trd>
  </trdgrp>
</drv>

<drv mrk="rezon.0povo">
  <kap><tld/>povo</kap>
  <snc mrk="rezon.0povo.KOMUNE">
    <dif>
      Kapablo <tld/>i, el elementaj informoj sisteme
      veni al konkludo;
      <ref tip="vid" cel="raci.0o.PSI">racio</ref>:
      <ekz>
        mia amata kato ne posedas imagpovon a&ubreve; <tld/>povon
        <fnt>
          <aut>[Hirotaka M.]</aut>,
          <vrk><url ref="http://www.vastalto.com/blog/?p=1054">
          Kato ne imagas</url></vrk>,
          <lok>Akvosfero, 2008-06-04</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">entendement</trd>
</drv>
</art>
