<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: perl.xml,v 1.21 2015/07/04 08:37:41 revo Exp $">
<kap>
   <ofc>*</ofc>
   <rad>perl</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="perl.0o">
   <kap><ofc>*</ofc><tld/>o</kap>
   <snc mrk="perl.0o.JUV_konka">
     <dif>
       Brilblanka globeto formi&gcirc;anta en kelkaj specoj de markonkoj
       kaj uzata kiel juvelo:
       <ekz>
         la virino estis <klr>...</klr> ornamita
         per oro kaj altvaloraj &scirc;tonoj kaj <tld/>oj
         <fnt><bib>NT</bib>, <lok>&Apo; 17:4</lok></fnt>.
       </ekz>
     </dif>
     <trdgrp lng="ru">
       <trd>&c_zh;&c_je;&c_m;&c_ch;&c_u;&c_g;</trd>,
       <trd>&c_zh;&c_je;&c_m;&c_ch;&c_u;&c_zh;&c_i;&c_n;&c_a;</trd>,
       <trd>&c_p;&c_je;&c_r;&c_l;</trd>
     </trdgrp>
   </snc>
   <snc mrk="perl.0o.JUV_bida">
     <dif>
       Vitra, emajla a&ubreve; metala globeto, kiun oni traboras kaj
       surfadenigas por fari diversajn ornama&jcirc;ojn;
       globa <ref tip="super" cel="bid.0o.JUV">bido</ref>.
     </dif>
     <trd lng="ru">&c_b;&c_i;&c_s;&c_je;&c_r;</trd>
   </snc>
   <snc mrk="perl.0o.FIG">
     <uzo tip="stl">FIG</uzo>
     <dif>
       Altvalora&jcirc;o, perfekta&jcirc;o, plej bela a&jcirc;o:
       <ekz>
         tio estas la <tld/>o el la kolekto;
       </ekz>
       <ekz>
         li estas la <tld/>o el la edzoj;
       </ekz>
       <ekz>
         literatura <tld/>o;
       </ekz>
       <ekz>
         ne donu sankta&jcirc;on al la hundoj, nek &jcirc;etu viajn
         <tld/>ojn anta&ubreve; la porkoj
         <fnt><bib>NT</bib>, <lok>&Mat; 7:6</lok></fnt>.
       </ekz>
     </dif>
     <refgrp tip="vid">
       <ref cel="gem.0o.FIG">gemo<sncref/></ref>,
       <ref cel="krem.0o.plejbonajxo">kremo<sncref/></ref>,
       <ref cel="trezor.0o.aprezindajxo">trezoro<sncref/></ref>.
     </refgrp>
     <trd lng="ru">&c_p;&c_je;&c_r;&c_l;</trd>
   </snc>
  <trd lng="br">perlezenn</trd>
  <trd lng="ca">perla</trd>
  <trd lng="cs">perla</trd>
  <trd lng="de">Perle</trd>
  <trd lng="en">pearl</trd>
  <trd lng="fr">perle</trd>
  <trdgrp lng="hu">
     <trd>gy&ouml;ngy</trd>,
     <trd>gy&ouml;ngyszem</trd>
   </trdgrp>
  <trd lng="id">mutiara</trd>
  <trdgrp lng="nl">
     <trd>parel</trd>,
     <trd>kraal</trd>
   </trdgrp>
  <trd lng="pl">per&lstroke;a</trd>
  <trd lng="pt">p&eacute;rola</trd>
  <trd lng="sk">perla</trd>
</drv>

<drv mrk="perl.0a">
   <kap><tld/>a</kap>
   <snc mrk="perl.0a.KOMUNE">
     <dif>
       Simila al <tld/>o, <tld/>okolora:
       <ekz>
         <tld/>aj dentoj;
       </ekz>
       <ekz>
         <tld/>a &ccirc;ielo, roso<fnt>B</fnt>.
       </ekz>
     </dif>
   </snc>
  <trd lng="br">-<ind>perlez</ind></trd>
  <trd lng="ca">perlat</trd>
  <trd lng="cs">perlivý</trd>
  <trd lng="de">Perlmutt-</trd>
  <trd lng="en">pearly</trd>
  <trdgrp lng="fr">
     <trd>de <ind>perle</ind></trd>,
     <trd>perl&eacute;</trd>
   </trdgrp>
  <trdgrp lng="hu">
     <trd>gy&ouml;ngy-</trd>,
     <trd>gy&ouml;ngyszer&udblac;</trd>
   </trdgrp>
  <trd lng="nl">parelachtig</trd>
  <trd lng="pl">per&lstroke;owy</trd>
  <trd lng="ru">&c_zh;&c_je;&c_m;&c_ch;&c_u;&c_zh;&c_n;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>perlivý</trd>,
    <trd>perlový</trd>
  </trdgrp>
</drv>

<drv mrk="perl.0i">
   <kap><tld/>i</kap>
   <gra><vspec>ntr</vspec></gra>
   <snc mrk="perl.0i.KOMUNE">
     <dif>
       Eli&gcirc;i kun formo de <tld/>o:
       <ekz>
         la &scirc;vito <tld/>is sur lia frunto;
       </ekz>
       <ekz>
         el liaj okuloj <tld/>as malrapide larmoj.
       </ekz>
     </dif>
   </snc>
  <trdgrp lng="br">
     <trd>perlezenni&ntilde;<klr tip="ind"> (pizenna&ntilde;)</klr></trd>,
     <trd>pizenna&ntilde;</trd>
   </trdgrp>
  <trd lng="ca">perlejar</trd>
  <trd lng="cs">ronit slzy</trd>
  <trd lng="de">perlen</trd>
  <trd lng="fr">perler</trd>
  <trd lng="id">[<ind>tetes</ind>] menetes</trd>
  <trd lng="nl">parelen</trd>
  <trd lng="pl">perli&cacute;</trd>
  <trd lng="sk">roniť slzy</trd>
</drv>
</art>
