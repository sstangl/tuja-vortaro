<vortaro>
<art mrk="$Id: miragx.xml,v 1.15 2010/08/03 16:31:28 revo Exp $">
<kap>
  <ofc>9</ofc><rad>mira&gcirc;</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="miragx.0o">
  <kap><ofc>9</ofc><tld/>o</kap>
  <snc mrk="miragx.0o.OPT">
    <uzo tip="fak">FOT</uzo>
    <dif>
      Optika apera&jcirc;o okazanta en varmaj landoj kaj konsistanta en tio,
      ke
      tre malproksimaj objektoj vidi&gcirc;as kiel proksimaj, sed
      renversitaj,
      kvaza&ubreve; spegulataj en akvo.
    </dif>
    <trdgrp lng="de">
      <trd>Luftspiegelung</trd>,
      <trd>Fata Morgana</trd>
    </trdgrp>
    <trd lng="hu">d&eacute;lib&aacute;b</trd>
  </snc>
  <snc mrk="miragx.0o.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Erariga alloga <ref tip="super" 
      cel="iluzi.0o.KOMUNE">iluzio</ref>:
      <ekz>
        pensu pri la mondo kiel pri veziko; rigardu &gcirc;in kiel <tld/>on
        <fnt>
          <aut>trad. T. T. Anuruddha</aut>,
          <vrk>La Vojo al Nirvano a&ubreve; la Dhammapado, 13:170</vrk>,
          <lok>B&#7891;-T&aacute;t-Csoma-Instituto por Budhologio, 1973</lok>
        </fnt>
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>Trugbild</trd>,
      <trd>Wahngebilde</trd>,
      <trd>T&auml;uschung</trd>
    </trdgrp>
  </snc>
  <trd lng="be">&c_m;&c_ib;&c_r;&c_a;&c_zh;</trd>
  <trd lng="ca">miratge</trd>
  <trdgrp lng="en">
    <trd>mirage</trd>,
    <trd lng="de">Fata Morgana</trd>
  </trdgrp>
  <trd lng="es">espejismo</trd>
  <trdgrp lng="hu">
    <trd>d&eacute;lib&aacute;b</trd>,
    <trd>&aacute;br&aacute;ndk&eacute;p</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>luchtspiegeling</trd>,
    <trd>fatamorgana</trd>
  </trdgrp>
  <trd lng="ru">&c_m;&c_i;&c_r;&c_a;&c_zh;</trd>
</drv>
</art>
