<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: sibari.xml,v 1.15 2015/07/04 08:37:43 revo Exp $">
<kap>
  <rad>sibarit</rad>/o <fnt>Z</fnt> <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="sibari.0o">
  <kap><tld/>o</kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="sibari.0o.MOR">
    <dif>
      Homo tro amanta la komforton.
    </dif>
    <refgrp tip="vid">
      <ref cel="epikur.e0ano.KOMUNE">epikurano<sncref/></ref>,
      <ref cel="hedonist.0o.FIL">hedonisto</ref>
    </refgrp>
  </snc>
  <trdgrp lng="be">
     <trd>&c_s;&c_y;&c_b;&c_a;&c_r;&c_y;&c_t;</trd>, 
     <trd>&c_s;&c_p;&c_je;&c_sh;&c_ch;&c_a;&c_n;&c_y;</trd>
  </trdgrp>
  <trd lng="ca">sibarita<klr> (subst.)</klr></trd>
  <trdgrp lng="cs">
    <trd>požitkář</trd>,
    <trd>rozkošník</trd>,
    <trd>sybarita</trd>,
    <trd>zhýčkanec</trd>
  </trdgrp>
  <trd lng="de">Sybarit</trd>
  <trd lng="en">sybarite</trd>
  <trd lng="fr">sybarite</trd>
  <trdgrp lng="hu">
    <trd>szibarita</trd>,
    <trd>&eacute;lvhajh&aacute;sz</trd>,
    <trd>puh&aacute;ny</trd>
  </trdgrp>
  <trd lng="nl">sybariet</trd>
  <trd lng="ru">&c_s;&c_i;&c_b;&c_a;&c_r;&c_i;&c_t;</trd>
  <trdgrp lng="sk">
    <trd>pôžitkár</trd>,
    <trd>rozkošník</trd>,
    <trd>rozmaznanec</trd>
  </trdgrp>
</drv>

<drv mrk="sibari.0ismo">
  <kap><tld/>ismo</kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="sibari.0ismo.MOR">
    <dif>
      &Gcirc;uisma vivmaniero de <tld/>o:
      <ekz>
        unuflankaj estas &ccirc;iuj civilizoj de l&#8217; Oriento,
        la &ccirc;ina kun sia izolismo, etiketo, sobreco kaj
        oficialismo <klr>...</klr> la persa kun sia
        <tld/>ismo, komercemo, mesiismoj kaj cedemo
        al fremdaj influoj
        <fnt>
          <aut>T. Margul, trad. K. &Sacute;liwi&nacute;ski</aut>,
          <vrk><url
          ref="http://www.autodydaktyka.republika.pl/esperanto/ekkonado.htm">
          Kial Valoras Konadi Orienton?</url></vrk>,
          <lok>[vidita en 2012]</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="cs">
    <trd>sybaritství</trd>,
    <trd>vyhledávání pohodlného života</trd>
  </trdgrp>
  <trd lng="fr">sybaritisme</trd>
  <trd lng="sk">vyhľadávanie pohodlného života</trd>
</drv>
</art>
