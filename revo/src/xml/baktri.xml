<vortaro>
  <art mrk="$Id: baktri.xml,v 1.9 2013/08/23 11:10:12 revo Exp $">
    <kap>
      <rad>Baktri</rad>/o
    </kap>

    <drv mrk="baktri.B0o">
      <kap>
        <tld/>o
      </kap>
      <snc>
        <uzo tip="fak">GEOG</uzo>
        <uzo tip="fak">HIS</uzo>
        <dif>
          Historia <ref tip="lst" cel="region.0o.land"
          lst="voko:regionoj">regiono</ref> en la
          <ref tip="malprt" cel="azi.InternaA0o">Interna Azio</ref>,
          inter la montaro <ref
          cel="hindukusx.H0o">Hinduku&scirc;o</ref>
          sude kaj la supra kaj meza partoj de
          <ref cel="amudarj.A0o">Amudarjo</ref> norde (nun en norda
          Afganujo,
          kaj en partoj de Uzbekujo kaj Turkmenujo), kies &ccirc;efurbo
          estis
          <em>Baktra</em>, la nuna Bal&hcirc;o.  Konkerite de la nomadoj
          (to&hcirc;aroj), &gcirc;i i&gcirc;is <em>To&hcirc;arujo</em>
          en 2a jc a.K.:
          <ekz>
            la loka legendo konservis ligon inter la edzino de
            Aleksandro kaj <tld/>o, lando de &scirc;ia vera patro
            <fnt>
              <aut>Marko Polo, trad. D. Moirand</aut>:
              <vrk>La libro de la mirinda&jcirc;oj a&ubreve; la
              priskribo de la mondo</vrk>,
              <lok>UEA, 2001, p. 125.</lok>
            </fnt>.
          </ekz>
        </dif>
        <trd lng="be">&c_B;&c_a;&c_k;&c_t;&c_r;&c_y;&c_ja;</trd>
        <trd lng="ca">Bactriana</trd>
        <trd lng="de">Baktrien</trd>
        <trdgrp lng="en">
          <trd>Bactria</trd>,
          <trd>Bactriane</trd>,
          <trd>Zariaspa</trd>
        </trdgrp>
        <trd lng="fr">Bactriane</trd>
        <trdgrp lng="grc">
          <trd>&Beta;&alfa;&kappa;&tau;&rho;&jota_ton;&alfa;</trd>,
          <trd>&Beta;&alfa;&kappa;&tau;&rho;&jota;&alfa;&ny;&eta_ton;</trd>
        </trdgrp>
        <trd lng="hu">Baktria</trd>
        <trd lng="pl">Baktria</trd>
        <trd lng="ru">&c_B;&c_a;&c_k;&c_t;&c_r;&c_i;&c_ja;</trd>
      </snc>
    </drv>

    <drv mrk="baktri.b0akamelo">
      <kap>
        <tld/>a kamelo
      </kap>
      <snc mrk="baktri.b0akamelo.ZOO">
        <uzo tip="fak">ZOO</uzo>
        <dif>
          Specio de <ref tip="super" cel="kamel.0o">kamelo</ref>
          (<trd lng="la">Camelus ferus <klr>(sova&gcirc;a)</klr></trd> kaj 
            <trd lng="la">Camelus bactrianus
            <klr>(hejmigita)</klr></trd>) 
            kun du &gcirc;iboj, vivanta en centra <ref
          tip="vid" cel="azi.A0o">Azio</ref>.
        </dif>          
        <ref tip="vid" cel="dromed.0o.ZOO">dromedaro</ref>
        <trd lng="ca"><ind>camell</ind> bactri&agrave;</trd>
        <trdgrp lng="pl">
          <trd>baktrian</trd>,
          <trd>wielb&lstroke;&aogonek;d dwugrabny</trd>
        </trdgrp>
      </snc>
    </drv>

  </art>

