<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id: sinekdohx.xml,v 1.5 2009/06/16 16:31:45 revo Exp $">
    <kap><rad>sinekdo&hcirc;</rad>/o</kap>

    <drv mrk="sinekdohx.0o">
      <kap><tld/>o</kap>
      <uzo tip="fak">LIN</uzo>
      <snc>
	<dif>
	  <ref tip="super" cel="figur.stil0o">Stilfiguro</ref>,
	  speco de <ref tip="super" cel="metonimi.0o">metonimio</ref>,
	  &ccirc;e kiu oni indikas ion per alia io surbaze de kvanta rilato
	  inter ili (tuton per parto, ion specialan per io &gcirc;enerala a&ubreve;
	  inverse):
	  <ekz>
	    en <ctl>sen gro&scirc;o en po&scirc;o</ctl> la vorto <ctl>gro&scirc;o</ctl>
	    estas <tld/>o signifanta: mono;
	  </ekz><ekz>
	    en <ctl>li estas instruita kapo</ctl> la vorto <ctl>kapo</ctl>
	    estas <tld/>o signifanta: homo;
	  </ekz><ekz>
	    en <ctl>li ekprenis la bridon de la azeno, kaj trotigis la
	    beston</ctl>
	    la uzo de genra nomo <ctl>besto</ctl> anstata&ubreve; speciala
	    <ctl>azeno</ctl> estas <tld/>o celanta eviti ripeton.
	  </ekz>
	</dif>
      </snc>
      <trd lng="be">&c_s;&c_y;&c_n;&c_e;&c_k;&c_d;&c_a;&c_h;&c_a;</trd>
      <trd lng="bg">&c_S;&c_i;&c_n;&c_je;&c_k;&c_d;&c_o;&c_h;&c_a;</trd>
      <trd lng="de">Synekdoche</trd>
      <trd lng="en">synecdoche</trd>
      <trd lng="fa">&a_m;&a_j;&a_A;&a_z; &a_m;&a_r;&a_s;&a_l;</trd>
      <trd lng="hu">szinekdoch&eacute;</trd>
      <trd lng="ru">&c_s;&c_i;&c_n;&c_je;&c_k;&c_d;&c_o;&c_h;&c_a;</trd>
    </drv>

  </art>

