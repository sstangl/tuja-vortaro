<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: mazda.xml,v 1.11 2015/07/04 08:37:39 revo Exp $">
<kap>
  <rad>mazda</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="mazda.0o">
  <kap><tld lit="M"/>o</kap>
  <snc mrk="mazda.0o.REL">
    <uzo tip="fak">REL</uzo>
    <dif>
      <ref tip="sin" cel="di.0o.monoteisma">Dio</ref> en
      <ref tip="vid" cel="mazda.0ismo"><tld/>ismo</ref>.
    </dif>
  </snc>
  <trdgrp lng="ca">
    <trd>Ahura Mazd&#257;</trd>,
    <trd>Ormazd</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Ahura Mazda</trd>,
    <trd>Ahuramazda</trd>
  </trdgrp>
  <trd lng="fa">&a_A;&a_h;&a_w;&a_r;&a_A;&a_m;&a_z;&a_d;&a_A;</trd>
  <trdgrp lng="fr">
    <trd>Ahura Mazd&acirc;</trd>,
    <trd>Ohrmazd</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>Ahura Mazd&aacute;</trd>,
    <trd>Ormuzd</trd>
  </trdgrp>
  <trd lng="pt">Ahura-Mazd&aacute;</trd>
  <trdgrp lng="ru">
    <trd>&c_A;&c_h;&c_u;&c_r;&c_a;&c_m;&c_a;&c_z;&c_d;&c_a;</trd>,
    <trd>&c_O;&c_r;&c_m;&c_u;&c_z;&c_d;</trd>,
    <trd>&c_O;&c_r;&c_m;&c_a;&c_z;&c_d;</trd>
  </trdgrp>
</drv>

<drv mrk="mazda.0ano">
  <kap><tld/>ano</kap>
  <snc mrk="mazda.0ano.REL">
    <uzo tip="fak">REL</uzo>
    <dif>
      Homo akceptanta la doktrinon kaj praktikon de <tld/>ismo.
    </dif>
  </snc>
  <trdgrp lng="ca">
    <trd>mazdeu</trd>,
    <trd>mazdaista</trd>
  </trdgrp>
  <trdgrp lng="fa">
    <trd>&a_z;&a_r;&a_t;&a_sh;&a_t;&f_y;</trd>,
    <trd>&a_m;&a_z;&a_d;&a_A;&f_y;&f_y;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>gu&egrave;bre</trd>,
    <trd>parsi</trd>,
    <trd>mazd&eacute;en<klr> (subst.)</klr></trd>,
    <trd>zoroastrien</trd>
  </trdgrp>
  <trd lng="hu">Mazda-h&iacute;v&odblac;</trd>
  <trdgrp lng="ru">
    <trd>&c_g;&c_je;&c_b;&c_r;</trd>,
    <trd>&c_p;&c_a;&c_r;&c_s;</trd>,
    <trd>&c_z;&c_o;&c_r;&c_o;&c_a;&c_s;&c_t;&c_r;&c_i;&c_je;&c_c;</trd>
  </trdgrp>
</drv>

<drv mrk="mazda.0ismo">
  <kap><tld/>ismo</kap>
  <snc mrk="mazda.0ismo.REL">
    <uzo tip="fak">REL</uzo>
    <dif>
      Persdevena <ref tip="lst" cel="religi.0o.REL"
      lst="voko:religioj">religio</ref>
      reformita de la profeto
      <ref tip="vid" cel="zaratusxtr.0o">Zaratu&scirc;tro</ref>
      en la 7a jarcento a. K., kies &ccirc;efa sankta libro estas la
      <ref tip="vid" cel="avest.0o">Avesto</ref>,
      kun malmultaj anoj precipe en centra Irano kaj
      Gu&gcirc;aratio:
      <ekz>
        en la antikva tempo oni pensis ke estroj, re&gcirc;oj kaj religiaj
        gvidantoj
        estas elektitaj de Dio. En tiu &ccirc;i verso <tld/>ismo aldonas
        pluan kondi&ccirc;on
        <klr>...</klr> kaj tiu kondi&ccirc;o estas virto
        <fnt>
          <aut>Be&ccirc;jo</aut>,
          <vrk><url ref="http://becxjo.blogspot.com">La mondo el mia
          vidpunkto</url></vrk>,
          <lok>2005-11-21</lok>
        </fnt>
      </ekz>      
    </dif>
  </snc>
  <trd lng="ca">mazdaisme</trd>
  <trd lng="cs">mazdaizmus</trd>
  <trd lng="fa">&a_A_madda;&f_y;&f_y;&a_n; <ind>&a_z;&a_r;&a_t;&a_sh;&a_t;</ind></trd>
  <trdgrp lng="fr">
    <trd>mazd&eacute;isme</trd>,
    <trd>parsisme</trd>,
    <trd>zoroastrisme</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>mazdaizmus</trd>,
    <trd>perzsa vall&aacute;s</trd>,
    <trd>p&aacute;rszi vall&aacute;s</trd>
  </trdgrp>
  <trd lng="pt">masde&iacute;smo</trd>
  <trdgrp lng="ru">
    <trd>&c_m;&c_a;&c_z;&c_d;&c_je;&c_i;&c_z;&c_m;</trd>,
    <trd>&c_z;&c_o;&c_r;&c_o;&c_a;&c_s;&c_t;&c_r;&c_i;&c_z;&c_m;</trd>
  </trdgrp>
  <trd lng="sk">mazdaizmus</trd>
</drv>
</art>

