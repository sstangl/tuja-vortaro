<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: arek.xml,v 1.7 2016/04/09 17:10:15 revo Exp $">
<kap>
  <rad>arek</rad>/o
</kap>

<drv mrk="arek.0o">
  <kap><tld/>o</kap>
  <snc mrk="arek.0arbo">
    <fnt><bib>PIV1</bib></fnt>
    <uzo tip="fak">BOT</uzo>
    <dif>
      <ref tip="lst" cel="genr.0o.BIO"
      lst="voko:botanikaj_genroj">Genro</ref> de 
      palmoj el Sudorientazio (<trd lng="la">Areca</trd>),
      el familio 
      <ref tip="super" cel="arekac.0oj">arekacoj</ref>; 
      unu specio (<trd lng="la">Areca catechu</trd>) 
      produktas man&gcirc;eblajn nuksojn.
    </dif>
    <trd lng="ca">areca</trd>
    <trdgrp lng="de">
      <trd>Betelpalme</trd>,
      <trd>Arekapalme</trd>
    </trdgrp>
    <trdgrp lng="fr">
      <trd>ar&eacute;quier</trd>,
      <trd>arec</trd>
    </trdgrp>
  </snc>
  
  <snc>
    <dif>
      <ref tip="dif" cel="arek.0nukso"><tld lit="A"/>nukso</ref>:
      <ekz>
        mi forgesis kunporti <tld/>an saketon, franjo, &ccirc;u vi havas
        <tld/>ojn
        <fnt><bib>RugxDom</bib> <lok>&ccirc;apitro 64a, p.
        397a</lok></fnt>?
      </ekz>
      <ekz>
        betelo grimpanta &ccirc;irka&ubreve; la trunko de <tld/>o
        <fnt>
          <vrk><url
          ref="http://e.vea.vn/view/1629_historiodebetelokajareknukso.htm">Historio
          de Betelo kaj areknukso</url></vrk>
        </fnt>.
      </ekz> 
    </dif>
    <trd lng="ca">nou d'areca</trd>
    <trdgrp lng="de">
      <trd>Betelnuss</trd>,
      <trd>Arekanuss</trd>
    </trdgrp>
    <trdgrp lng="fr">
      <trd>noix d'arec</trd>,
      <trd>noix de b&eacute;tel</trd>
    </trdgrp>
  </snc>
  <trdgrp lng="cs">
    <trd>areka</trd>,
    <trd>palma arekov&aacute;</trd>
  </trdgrp>
  <trd lng="sk">palma arekov&aacute;</trd>
</drv>

<drv mrk="arek.0nukso">
  <kap><tld/>nukso</kap>
  <snc>
    <dif>
      <ref tip="super" cel="kern.0o.BOT">Kerno</ref> de la frukto de
      <tld/>arbo kun man&gcirc;ebla grajno:
      <ekz>
        kutimo ma&ccirc;i betelon kaj <tld/>nukson
        <fnt>
          <vrk><url
          ref="http://e.vea.vn/view/1629_historiodebetelokajareknukso.htm">Historio
          de Betelo kaj areknukso</url></vrk>
        </fnt>
      </ekz>
    </dif>
  </snc>
  <trd lng="ca">nou d'areca</trd>
  <trdgrp lng="de">
    <trd>Beteln&uuml;sse</trd>,
    <trd>Arekan&uuml;sse</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>noix d'arec</trd>,
    <trd>noix de b&eacute;tel</trd>
  </trdgrp>
 </drv>
</art>

