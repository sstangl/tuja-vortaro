<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: belado.xml,v 1.21 2015/10/05 03:10:16 revo Exp $">
  <kap>
  <ofc>*</ofc>
  <rad>beladon</rad>/o
  </kap>
  <drv mrk="belado.0o">
    <kap>
      <ofc>*</ofc>
      <tld/>o
    </kap>
    <uzo tip="fak">BOT</uzo>
    <snc>
      <dif>
        <ref tip="lst" cel="speci.0o.BIO"
        lst="voko:botanikaj_specioj">Specio</ref> el familio <ref
        tip="malprt"
        cel="solana.0oj">solanacoj</ref>
        (<trd lng="la">Atropa belladona</trd>); 
        alta disbran&ccirc;i&gcirc;anta 
        <ref tip="lst" cel="stauxd.0o"
        lst="voko:solanoparencoj">sta&ubreve;do</ref>,
        kun klo&scirc;formaj violkoloraj a&ubreve; flavaj floroj kaj 
        globformaj nigraj a&ubreve; flavaj beroj enhavantajn
        tre multajn renformajn semetojn;
        &ccirc;iuj partoj de la vegeta&jcirc;o estas venenaj,
        enhavantaj i.a.
        hiosciaminon, el kiu oni produktas
        <ref cel="atropi.0o">atropinon</ref>.
      </dif>
      <trd lng="be">&c_b;&c_je;&c_l;&c_a;&c_d;&c_o;&c_n;&c_n;&c_a;</trd>
      <trd lng="br">benede</trd>
      <trd lng="de">Tollkirsche</trd>
      <trdgrp lng="en">
        <trd>deadly <ind>nightshade</ind></trd>,
        <trd>devil's cherry</trd>,
        <trd>belladonna</trd>
      </trdgrp>
      <trd lng="es">belladona</trd>
      <trd lng="fr">belladone</trd>
      <trd lng="hu">(maszlagos) <ind>nadragulya</ind></trd>
      <trd lng="nl">belladonna</trd>
      <trdgrp lng="pl">
        <trd>belladona</trd>,
        <trd>pokrzyk</trd>,
        <trd>wilcza <ind>jagoda</ind><klr> (pot.)</klr></trd>
      </trdgrp>
      <trd lng="pt">beladona</trd>
      <trdgrp lng="ru">
        <trd>&c_b;&c_je;&c_l;&c_a;&c_d;&c_o;&c_n;&c_n;&c_a;</trd>,
        <trd>&c_k;&c_r;&c_a;&c_s;&c_a;&c_v;&c_k;&c_a;</trd>
      </trdgrp>
      <trd lng="sv">belladonna</trd>
    </snc>
  </drv>
</art>

