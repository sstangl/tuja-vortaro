<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: ment.xml,v 1.36 2015/07/04 08:37:39 revo Exp $">
<kap><ofc>*</ofc>
<rad>ment</rad>/o</kap>
<drv mrk="ment.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="ment.0o.genro">
    <uzo tip="fak">BOT</uzo>
    <dif>
      <ref tip="lst" cel="genr.0o.BIO"
      lst="voko:botanikaj_genroj">Genro</ref> el familio <ref
      tip="malprt" cel="lamiac.0oj">lamiacoj</ref>
      (<trd lng="la">Mentha</trd>); <ref tip="dif"
      cel="stauxd.0o">sta&ubreve;do</ref>
      kun simplaj segildentaj folioj,
      &scirc;ajnverticiloj a&ubreve; &scirc;ajnspikoj de multaj dulipaj blankaj a&ubreve;
      rozkoloraj 
      floroj, kies unuloba
      supra lipo estas proksimume samgranda kiel la tri loboj de la
      malsupra,
      tiel &scirc;ajnigante kvarnombran korolon; la frukto dividi&gcirc;as en kvar
      &ccirc;elojn
      kun po unu semo:
      <ekz>
        &scirc;ajnis kvaza&ubreve; la silenta arbara naturo per tio
        fari&gcirc;is sankta pre&gcirc;ejo <klr>[...]</klr> kaj
        la sova&gcirc;a <tld/>o bonodoris kvaza&ubreve; &gcirc;i volus
        anstata&ubreve;i altaron kaj incensojn
        <fnt><bib>Fab4</bib>, <lok>lasta son&gcirc;o de maljuna
        kverko</lok></fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_m;&c_ja;&c_t;&c_a;</trd>
    <trd lng="de">Minze</trd>
    <trd lng="en">mint</trd>
    <trd lng="es">menta</trd>
    <trd lng="fa">&f_p;&a_w;&a_n;&a_h;</trd>
    <trd lng="fr">menthe</trd>
    <trd lng="hu">menta</trd>
    <trd lng="nl">munt</trd>
    <trdgrp lng="pt">
      <trd>menta</trd>,
      <trd>hortel&atilde;</trd>
    </trdgrp>
    <trd lng="ru">&c_m;&c_ja;&c_t;&c_a;</trd>
    <trd lng="tr">nane</trd>
  </snc>
  <snc mrk="ment.0o.spico">
    <uzo tip="fak">KUI</uzo>
    <dif>
      <ref tip="dif"
      cel="ment.pipro0o.spico">Pipro<tld/>o<sncref/></ref>:
      <ekz>
        &ccirc;ar vi pagas dekona&jcirc;ojn de <tld/>o kaj de anizo
        kaj de kumino
        <fnt><bib>NT</bib>, <lok>Mateo 23:23</lok></fnt>.
      </ekz>
    </dif>
    <trd lng="nl">pepermunt</trd>
    <trd lng="de">Pfefferminze</trd>
    <trd lng="fa">&a_n;&a_ayn;&a_n;&a_A;&a_ayn;</trd>
    <trd lng="hu">borsmenta</trd>   
    <trd lng="pl"><ind>mi&eogonek;ta</ind> pieprzowa</trd>
    <trd lng="pt">hortel&atilde;-pimenta</trd>
    <trd lng="ru">&c_m;&c_ja;&c_t;&c_a; &c_p;&c_je;&c_r;&c_je;&c_ch;&c_n;&c_a;&c_ja;</trd>
  </snc>
  <trd lng="br">bent</trd>
  <trd lng="ca">menta</trd>
  <trd lng="cs">máta</trd>
  <trd lng="pl">mi&eogonek;ta</trd>
  <trd lng="sk">mäta</trd>
</drv>

<drv mrk="ment.pipro0o">
  <kap>pipro<tld/>o <fnt><bib>KrDE</bib></fnt></kap>
  <snc mrk="ment.pipro0o.specio">
    <uzo tip="fak">BOT</uzo>
    <dif>
      <ref tip="lst" cel="speci.0o.BIO" lst="voko:spicoj">Specio</ref> 
      de <ref tip="super" cel="ment.0o"><tld/>o</ref>
      (<trd lng="la">Mentha piperita</trd>), aroma herbo uzata
      kiel <ref tip="lst" cel="spic.0o.KUI"
      lst="voko:spicoj">spico</ref>, 
      en tizanoj kaj en farmacio.
    </dif>    
    <trd lng="br">bent-liorzh</trd>
    <trd lng="pt">hortel&atilde;-pimenta</trd>
  </snc>
  <snc mrk="ment.pipro0o.spico">
    <uzo tip="fak">KUI</uzo>
    <dif>
      <ref tip="super" cel="spic.0o">Spico</ref> farita el la folioj de
      <ref tip="malprt"
      cel="ment.pipro0o.specio">pipro<tld/>o<sncref/></ref>.
    </dif>
    <trd lng="pt">hortel&atilde;-pimenta</trd>
  </snc>
  <trd lng="ca">herba sana</trd>
  <trd lng="de">Pfefferminze</trd>
  <trd lng="en">peppermint</trd>
  <trd lng="fa">&a_n;&a_ayn;&a_n;&a_A;&a_ayn;</trd>
  <trd lng="fr">menthe poivr&eacute;e</trd>
  <trd lng="hu">borsmenta</trd>
  <trd lng="nl">pepermunt</trd>
  <trd lng="ru">&c_m;&c_ja;&c_t;&c_a; &c_p;&c_je;&c_r;&c_je;&c_ch;&c_n;&c_a;&c_ja;</trd>
  <trdgrp lng="pl">
    <trd>mi&eogonek;ta</trd>,
    <trd><ind>mi&eogonek;ta</ind> pieprzowa</trd>
  </trdgrp>  
</drv>
</art>
