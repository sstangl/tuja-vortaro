<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: kontri1.xml,v 1.16 2015/07/04 08:37:38 revo Exp $">
<kap>
  <ofc>3</ofc>
  <rad>kontribuci</rad>/o <fnt>Z</fnt> <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="kontri1.0o">
  <kap><tld/>o</kap>
  <snc mrk="kontri1.0o.POL">
    <uzo tip="fak">POL</uzo>
    <uzo tip="fak">EKON</uzo>
    <dif>
      Sumo pagata de venkita popolo al la venkinto,
      kiel <ref tip="super" cel="kompen1.0o">kompensa</ref>
      repago por la difekti&gcirc;oj kaj militaj elspezoj:
      <ekz>
        Francio <klr>...</klr> pagis al Germanio sen malfacilo
        la grandegan <tld/>on de kvin miliardoj
        <fnt>
         <aut>L. N. Tolstoj, trad. I. Ma&ccirc;ernis</aut>,
         <vrk><url
         ref="http://cindymckee.com/librejo/TOLSTOJ_Kristanismo_kaj_patriotismo.pdf">
         Kristanismo kaj Patriotismo</url></vrk>,
         <lok>1931</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="tribut.0o.POL">tributo</ref>
    </refgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_k;&c_a;&c_n;&c_t;&c_r;&c_y;&c_b;&c_u;&c_c;&c_y;&c_ja;</trd>,
    <trd>&c_r;&c_e;&c_p;&c_a;&c_r;&c_a;&c_c;&c_y;&c_ja;</trd>
  </trdgrp>
  <trd lng="ca">reparaci&oacute;</trd>
  <trd lng="cs">kontribuce <klr>(válečná)</klr></trd>
  <trdgrp lng="de">
     <trd>Reparation</trd>,
     <trd>Kriegsentsch&auml;digung</trd>
  </trdgrp>
  <trd lng="en">reparations</trd>
  <trdgrp lng="fr">
    <trd>indemnit&eacute; de guerre</trd>,
    <trd>r&eacute;paration de guerre</trd>
  </trdgrp>
  <trdgrp lng="hu">
     <trd>h&aacute;bor&uacute;s <ind>k&aacute;rt&eacute;r&iacute;t&eacute;s</ind></trd>,
     <trd>repar&aacute;ci&oacute;</trd>
  </trdgrp>
  <trd lng="nl">oorlogsschatting</trd>
  <trdgrp lng="pt">
    <trd>contribui&ccedil;&atilde;o <klr tip="amb">(mil.)</klr></trd>,
    <trd>indeniza&ccedil;&atilde;o <klr tip="amb">(mil.)</klr></trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_k;&c_o;&c_n;&c_t;&c_r;&c_i;&c_b;&c_u;&c_c;&c_i;&c_ja;</trd>,
    <trd>&c_r;&c_je;&c_p;&c_a;&c_r;&c_a;&c_c;&c_i;&c_ja;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>reparácie</trd>,
    <trd>vojnová náhrada</trd>
  </trdgrp>
</drv>
</art>
