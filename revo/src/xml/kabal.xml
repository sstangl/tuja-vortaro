<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: kabal.xml,v 1.21 2013/03/27 15:10:22 revo Exp $">
<kap>
    <ofc>1</ofc>
    <rad>Kabal</rad>/o
</kap>
<drv mrk="kabal.0o">
    <kap><tld/>o</kap>
    <uzo tip="fak">REL</uzo>
    <snc>
      <dif>
        Mistera tradicio de juda <ref
        cel="mistik.0ismo">mistikismo</ref>:
        <ekz>
          el la bibliaj profetoj, el e&hcirc;oj de la <tld/>o
<klr>[Perec]</klr>
          kaj liaj dis&ccirc;iploj teksis mirindajn parabolojn
          <fnt>
          <aut>M. Wajsblum</aut>
          <vrk>Mesa&gcirc;o de la justo</vrk>
          <lok><url
ref="http://donh.best.vwh.net/Esperanto/Literaturo/Revuoj/np/np5705/justo.html">Norda
Prismo 57/5</url></lok>
          </fnt>;
        </ekz>
        <ekz>
          artikoloj pri juda mezepoka muziko kaj <tld/>o paralelas
artikolojn
          pri la historio de la armena apostola eklezio kaj la pasinteco
          de la armena &scirc;tato
          <fnt>
          <aut>UEA</aut>
          <vrk>Historia Kontakto</vrk>
          <lok><url
ref="http://www.uea.org/dokumentoj/komunikoj/gaz143.htm">GK N-ro
143</url></lok>
          </fnt>;
        </ekz>
        <ekz>
          en 2004 ekkredis en <tld/>o la konata kantistino Madonna
          <fnt>
          <vrk>Kabalo</vrk>
          <lok><url
ref="http://eo.wikipedia.org/wiki/Kabalo">Vikipedio</url></lok>
          </fnt>.
        </ekz>
      </dif>
      <rim>
        Oni nuntempe emas uzi la vorton sen artikolo kaj kun majusklo.
      </rim>
    </snc>
    <trd lng="be">&c_k;&c_a;&c_b;&c_a;&c_l;&c_a;</trd>
    <trd lng="ca">c&agrave;bala</trd>
    <trd lng="de">Kabbala</trd>
    <trdgrp lng="en">
      <trd>Cabbala</trd>,
      <trd>Cabbalah</trd>
    </trdgrp>
    <trd lng="es">c&aacute;bala</trd>
    <trd lng="fi">kabbala</trd>
    <trdgrp lng="fr">
      <trd>kabbale</trd>,
      <trd>cabale<klr tip="ind"> (doctrine mystique)</klr></trd>
    </trdgrp>
    <trd lng="he">&qof;&bet;&lamed;&he;<klr tip="amb">
(&tav;&vav;&resh;&tav; &he;&nun;&samekh;&tav;&resh;
&he;&yod;&he;&vav;&dalet;&yod;&tav;)</klr></trd>
    <trd lng="hu">Kabbala</trd>
    <trd lng="nl">Kabbala</trd>
    <trd lng="pt">cabala</trd>
    <trd lng="ru">&c_k;&c_a;&c_b;&c_b;&c_a;&c_l;&c_a;</trd>
    <trd lng="sk">kabala</trd>
</drv>

<drv mrk="kabal.k0o">
    <kap><tld lit="k"/>o</kap>
    <snc mrk="kabal.k0o.doktrino">
      <dif>
        Komplika kaj enigma doktrino:
        <ekz>
          li faris al si el la &ccirc;asado <tld lit="k"/>on a&ubreve;
          anta&ubreve;diran rimedon
          <fnt><bib>Far1</bib><lok>&ccirc;ap. 16</lok></fnt>;
        </ekz>
        <ekz>
          senditoj de la Babela pastraro vendis <klr>[...]</klr>
          ringojn &ccirc;iuspecajn kun <ind><tld lit="k"/>a</ind>j
          <klr>(enigmaj)</klr> surskriboj
          <fnt><bib>I&scirc;tar</bib><lok>&ccirc;ap. 2</lok></fnt>.
            <trd lng="ca">cabal&iacute;stic</trd>
            <trdgrp lng="fr">
              <trd>de la <ind>cabale</ind></trd>,
              <trd>cabalistique</trd>
            </trdgrp>
            <trd lng="nl">kabbalistisch</trd>
            <trd lng="pt">cabala</trd>
        </ekz>
      </dif>
      <trd lng="nl">kabbala</trd>
    </snc>
    <trd lng="fi"><klr tip="amb">(kuv.) </klr> salaoppi</trd>

    <snc mrk="kabal.k0o.Kabalo">
      <uzo tip="klr">(kun la artikolo)</uzo>
      <ref tip="dif" cel="kabal.0o"><tld/>o</ref>
      <ekz>
        la <tld lit="k"/>o influas ankora&ubreve; la judan ideologion,
        kulturon kaj religion, precipe post &gcirc;ia revivigo
        fare de la usonano M.M. Kaplan post 1920
        <fnt>
        <lok><url
ref="http://members.tripod.com/persone/NEWAGE/terminaro.html">http://members.tripod.com/persone/NEWAGE/terminaro.html</url></lok>
        </fnt>.
      </ekz>
      <trd lng="nl">kabbala</trd>
    </snc>

    <snc mrk="kabal.k0o.intrigo">
      <uzo tip="stl">EVI</uzo>
      <ref tip="dif" cel="intrig.0o.komploto">intrigo</ref>
      <ekz>
        &c_K;&c_a;&c_b;&c_a;&c_l;&c_a; &c_s;&c_v;&c_ja;&c_t;&c_o;&c_sh;
        ("La <tld lit="k"/>o de bigotuloj", teatra&jcirc;o, 1936)
        <fnt>
        <vrk>Mi&hcirc;ail Bulgakov</vrk>
        <lok><url
ref="http://eo.wikipedia.org/wiki/Mi%C4%A5ail_BULGAKOV">Vikipedio</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        &ccirc;u Kabila-kabalo?
        <fnt>
        <aut>Z.N. Zola</aut>
        <vrk>&Ccirc;u Kabila-kabalo?</vrk>
        <lok><url
ref="http://www.esperanto.be/fel/mon/006331.html">Monato</url></lok>
        </fnt>.
      </ekz>
      <trdgrp lng="nl">
        <trd>intrige<klr tip="ind"> (ontr.)</klr></trd>,
        <trd>valstrik<klr tip="ind"> (ontr.)</klr></trd>,
        <trd>arglist<klr tip="ind"> (ontr.)</klr></trd>
      </trdgrp>
    </snc>
    <trd lng="ca">c&agrave;bala</trd>
</drv>

<drv mrk="kabal.k0isto">
    <kap><tld lit="k"/>isto</kap>
    <snc>
      <dif>
        Fakulo a&ubreve; adepto pri <tld/>o.
      </dif>
    </snc>
    <trd lng="be">&c_k;&c_a;&c_b;&c_a;&c_l;&c_ib;&c_s;&c_t;</trd>
    <trd lng="ca">cabalista</trd>
    <trd lng="fi">kabbalisti</trd>
    <trdgrp lng="fr">
      <trd>cabaliste</trd>,
      <trd>kabbaliste</trd>
    </trdgrp>
    <trd lng="nl">kabbalist</trd>
</drv>
</art>
