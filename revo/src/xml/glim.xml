<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: glim.xml,v 1.16 2015/12/04 11:10:25 revo Exp $">
<kap>
  <ofc>*</ofc>
  <rad>glim</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="glim.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="glim.0o.MIN">
    <uzo tip="fak">MIN</uzo>
    <dif>
      Mineralo kun metaleca brilo, kiu facile tavoli&gcirc;as per 
      diafanaj lamenetoj:
      <ekz>
        verda <tld/>o el Siberio, roza <tld/>o el Ameriko.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_l;&c_u;&c_sh;&c_ch;&c_a;&c_k;</trd>
  <trd lng="ca">mica</trd>
  <trd lng="cs">sl&iacute;da</trd>
  <trd lng="de">Glimmer</trd>
  <trd lng="en">mica</trd>
  <trd lng="fr">mica</trd>
  <trdgrp lng="nl">
    <trd>mica</trd>,
    <trd>glimmer</trd>
  </trdgrp>
  <trdgrp lng="pl">
   <trd>mika</trd>, 
   <trd>&lstroke;yszczyk</trd> 
  </trdgrp>
  <trdgrp lng="pt">
   <trd>mica</trd>, 
   <trd>malacacheta</trd> 
  </trdgrp>
  <trd lng="ru">&c_s;&c_l;&c_ju;&c_d;&c_a;</trd>
  <trd lng="sk">s&lcaron;uda</trd>
</drv>

<drv mrk="glim.0i">
  <kap><tld/>i,
  <var><kap><tld/>brili</kap></var></kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="glim.0i.LUM">
    <dif>
      <ref tip="super" cel="bril.0i.lumo">Brilegi</ref>
      kiel <tld/>o:
      <ekz>
         liaj malgrandaj kornoj <tld/>is kiel ar&gcirc;ento
        <fnt>
          <aut>-</aut>,
          <vrk><url
          ref="https://eo.wikisource.org/wiki/Budhismaj_rakontoj/Re%C4%9Do_Banjan_Cervo">
          Re&gcirc;o Banjan Cervo</url></vrk>,
          <lok>en: Budhismaj rakontoj, 2013</lok>
        </fnt>;
      </ekz>
      <ekz>
        la ne&gcirc;o <tld/>brilas sub la suno.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_l;&c_ib;&c_s;&c_k;&c_a;&c_c;&c_je;&c_c;&c_mol; 
  <klr>(&c_n;&c_ib;&c_b;&c_y; &c_l;&c_u;&c_sh;&c_ch;&c_a;&c_k;)</klr>
  </trd>
  <trdgrp lng="ca">
    <trd>relluir</trd>,
    <trd>mirallejar</trd>,
    <trd>brillar com la mica</trd>
  </trdgrp>
  <trd lng="cs">t&rcaron;pytit se jako sl&iacute;da</trd>
  <trd lng="de">schimmern</trd>
  <trd lng="en">gleam</trd>
  <trdgrp lng="fr">
    <trd>chatoyer</trd>,
    <trd>miroiter</trd></trdgrp>
  <trdgrp lng="nl">
    <trd>glimmen</trd>,
    <trd>blinken</trd>
  </trdgrp>
  <trd lng="pl">&lstroke;yska&cacute;</trd>
  <trd lng="pt">brilhar como a mica</trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_v;&c_je;&c_r;&c_k;&c_a;&c_t;&c_mol;</trd>,
    <trd>
    &c_p;&c_je;&c_r;&c_je;&c_l;&c_i;&c_v;&c_a;&c_t;&c_mol;&c_s;&c_ja; 
    <klr>(&c_k;&c_a;&c_k; &c_s;&c_l;&c_ju;&c_d;&c_a;)</klr>
    </trd>
  </trdgrp>
  <trd lng="sk">leskn&uacute;&tcaron; sa <klr>(ako s&lcaron;uda)</klr></trd>
</drv>
</art>
