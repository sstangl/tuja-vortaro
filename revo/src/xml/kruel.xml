<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: kruel.xml,v 1.13 2009/09/17 16:30:46 revo Exp $">
<kap>
  <ofc>*</ofc>
  <rad>kruel</rad>/a
</kap>
<drv mrk="kruel.0a">
  <kap>
    <ofc>*</ofc><tld/>a
  </kap>
  <snc>
    <uzo tip="klr">(iu)</uzo>
    <dif>
      Inklina suferigi, malhumana, turmentema:
      <ekz>
        <tld/>a besto, koro, tirano, dio;
      </ekz>
      <ekz>
        <tld/>a kiel tigro;
      </ekz>
      <ekz>
        <tld/>e frapi.
      </ekz>
    </dif>
    <trdgrp lng="de">
     <trd>grausam</trd>,
     <trd>unmenschlich</trd>
    </trdgrp>
    <trd lng="hu">kegyetlen</trd>
  </snc>
  <snc>
    <uzo tip="klr">(io)</uzo>
    <dif>
      Suferiga, turmenta, doloriga, mal&gcirc;ojiga, aflikta:
      <ekz>
        <tld/>a vundo, doloro, ordono, sorto, insulto, perdo, morto,
        seniluzii&gcirc;o;
      </ekz>
      <ekz>
        la honoro estas ja bela, sed la laboro <tld/>a<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>e elrevigita;
      </ekz>
      <ekz>
        la <tld/>eco de l' fatalo.
      </ekz>
    </dif>
    <trdgrp lng="de">
     <trd>schlimm</trd>,
     <trd>hart</trd>
    </trdgrp>
    <trd lng="hu">borzalmas</trd>
  </snc>
  <trdgrp lng="be">
    <trd>&c_zh;&c_o;&c_r;&c_s;&c_t;&c_k;&c_ib;</trd>,
    <trd>&c_l;&c_ju;&c_t;&c_y;</trd>,
    <trd>&c_b;&c_ja;&c_z;&c_mol;&c_l;&c_ib;&c_t;&c_a;&c_s;&c_n;&c_y;</trd>
  </trdgrp>
  <trd lng="ca">cruel</trd>
  <trd lng="en">cruel</trd>
  <trd lng="es">cruel</trd>
  <trd lng="fr">cruel</trd>
  <trd lng="nl">wreed</trd>
  <trdgrp lng="pt">
    <trd>cruel</trd>,
    <trd>desalmado</trd>
  </trdgrp>
  <trd lng="ru">&c_zh;&c_je;&c_s;&c_t;&c_o;&c_k;&c_i;&c_j;</trd>
</drv>
</art>

