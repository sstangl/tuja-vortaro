<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id: dalajlama.xml,v 1.6 2013/12/02 13:10:27 revo Exp $">
    <kap><rad>dalajlama</rad>/o</kap>

    <drv mrk="dalajlama.0o">
      <kap><tld/>o</kap>
      <snc>
	<uzo tip="fak">REL</uzo>
	<dif>
          Titolo de la &ccirc;efpastro de la kvar bran&ccirc;oj de la tibeta
          <ref tip="malprt" cel="buda.0ismo">budaismo</ref>,
          vivon post vivo renaski&gcirc;anta, elser&ccirc;ata kaj
          reenoficigata:
          <ekz>
            lia sankteco la Dek Kvara <tld lit="D"/>o
            <fnt>
              <lok><url
              ref="http://esperanto.us/Budhanaj/CxenrezigMedito.html"
                  >La ok versoj kaj Avalokite&scirc;varo</url></lok>
            </fnt>;
          </ekz><ekz>
            je 1447 p.K., post kiam <tld lit="D"/>o la Unua konstruis
            Zha&scirc;illunbu-Templon en Rikaze <klr>...</klr>
            <fnt>
              <vrk>Internacia turisma agado de Esperanto en
              Tibeto</vrk>.
              <lok><url ref="http://www.la-amikeco.net/04.php"
                  >La amikeco. N-ro 4 (2004)</url></lok>
            </fnt>.
          </ekz>
	</dif>
      <rim>
        La PIV-oj ial preferas skribon per <em>i</em>:
        <ctl>Dalai-lamao</ctl>.  La budaistoj mem tamen skribas per
        <em>j</em>.
        <aut>Sergio Pokrovskij</aut>
      </rim>
      </snc>
      <trd lng="bg">&c_D;&c_a;&c_l;&c_a;&c_j; &c_L;&c_a;&c_m;&c_a;</trd>
      <trdgrp lng="ca">
        <trd>dalai-lama</trd>,
        <trd>gran lama</trd>
      </trdgrp>
      <trd lng="de">Dalai Lama</trd>
      <trd lng="en">Dalai Lama</trd>
      <trd lng="fr">dala&iuml;-lama</trd>
      <trd lng="pl">Dalaj Lama</trd>
      <trdgrp lng="pt">
        <trd>dalai-lama</trd>,
        <trd>gr&atilde;-lama</trd>,
        <trd>gr&atilde;o-lama</trd>
      </trdgrp>
      <trd lng="ru">&c_d;&c_a;&c_l;&c_a;&c_j;-&c_l;&c_a;&c_m;&c_a;</trd>
      <trd lng="tr">Dalay Lama</trd>
    </drv>
  </art>

