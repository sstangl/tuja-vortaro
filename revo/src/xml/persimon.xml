<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id: persimon.xml,v 1.5 2009/10/24 16:31:28 revo Exp $">
    <kap>
      <rad>persimon</rad>/o<fnt>PIV1</fnt>
    </kap>

    <drv mrk="persimon.0o">
      <kap><tld/>o</kap>
      <uzo tip="fak">BOT</uzo>
      <snc mrk="persimon.0o.orienta">
        <dif>
          Frukto de <tld/>ujo orienta, ekstere simila al tomato, ru&gcirc;a
          a&ubreve; flava, sukplena, dol&ccirc;a, kun kvar restantaj
          kalikfolioj:
          <ekz>
            oni faris &gcirc;in <klr>(la &ccirc;inan man&gcirc;on
              zongzi-o)</klr> el glueca rizo
            kun aldonitaj jujubo, ka&scirc;tano, sekigita <tld/>o,
            ginkofruktoj, ru&gcirc;aj faboj kaj volvis &gcirc;in per folioj
            <fnt>
              <vrk>Zongzi-o &dash; tradicia man&gcirc;a&jcirc;o de la Festo
                de Duobla Kvino</vrk>,
              <lok><url
                  ref="http://es.chinabroadcast.cn/1/2004/08/16/1@13796.htm"
                  >&Ccirc;ina Radio Internacia</url></lok>
            </fnt>.
          </ekz>
        </dif>
      </snc>
      <snc mrk="persimon.0o.virginia">
        <dif>
          Frukto de <tld/>ujo virginia.
        </dif>
      </snc>
      <trdgrp lng="en">
        <trd>persimmon</trd>,
        <trd>date-plum</trd>
      </trdgrp>
      <trdgrp lng="hu">
        <trd>kakiszilva</trd>,
        <trd>datolyaszilva</trd>
      </trdgrp>
      <trd lng="nl">dadelpruim</trd>
      <trd lng="pt">caqui</trd>
      <trd lng="ru">&c_h;&c_u;&c_r;&c_m;&c_a;</trd>
    </drv>

    <drv mrk="persimon.0ujo">
      <kap><tld/>ujo</kap>
      <uzo tip="fak">BOT</uzo>
      <snc>
        <dif>
          Genro de fruktaj arboj kaj arbetoj parencaj al la ebonarbo
          (proks. 200 specioj).
        </dif>
      </snc>
      <refgrp tip="sub">
        <ref cel="persimon.0ujoorienta"><tld/>ujo orienta</ref>,
        <ref cel="persimon.0ujovirginia"><tld/>ujo virginia</ref>
      </refgrp>
      <trdgrp lng="hu">
        <trd>kakiszilvafa</trd>,
        <trd>datolyaszilvafa</trd>
      </trdgrp>
      <trd lng="nl">persimmon</trd>
      <trd lng="ru">&c_h;&c_u;&c_r;&c_m;&c_a;<klr>
          (&c_r;&c_a;&c_s;&c_t;&c_je;&c_n;&c_i;&c_je;)</klr></trd>
    </drv>

    <drv mrk="persimon.0ujoorienta">
      <kap><tld/>ujo orienta</kap>
      <uzo tip="fak">BOT</uzo>
      <snc>
        <dif>
          La plej disvastigita specio de <tld/>ujo, arbo normale 5&ndash;8
          (sed iam &gcirc;is 25) metrojn alta (iam tamen arbetaro), komuna
          en la sudorienta Azio, en Uzbekujo, Persujo, Ka&ubreve;kazo,
          Krimeo, Egiptujo; iom malpli en Italujo kaj Hispanujo:
          <ekz>
            en Ka&ubreve;kazio kaj en la Centra Azio la <tld/>ujo orienta
            kreskas kaj sova&gcirc;e, kaj kulture.
          </ekz>
        </dif>
      </snc>
      <trdgrp lng="hu">
        <trd>&aacute;zsiai <ind>kakiszilva</ind></trd>,
        <trd>&aacute;zsiai <ind>datolyaszilva</ind></trd>
      </trdgrp>
      <trd lng="la">Diospyros kaki</trd>
      <trd lng="nl">kakivrucht</trd>
      <trdgrp lng="ru">
        <trd>&c_h;&c_u;&c_r;&c_m;&c_a;
         
&c_o;&c_b;&c_y;&c_k;&c_n;&c_o;&c_v;&c_je;&c_n;&c_n;&c_a;&c_ja;</trd>,
        <trd>&c_h;&c_u;&c_r;&c_m;&c_a;
          &c_k;&c_a;&c_v;&c_k;&c_a;&c_z;&c_s;&c_k;&c_a;&c_ja;</trd>,
        <trd>&c_h;&c_u;&c_r;&c_m;&c_a;
          &c_v;&c_o;&c_s;&c_t;&c_o;&c_ch;&c_n;&c_a;&c_ja;</trd>
      </trdgrp>
    </drv>

    <drv mrk="persimon.0ujojapana">
      <kap><tld/>ujo japana</kap>
      <uzo tip="fak">BOT</uzo>
      <ref tip="dif" cel="persimon.0ujoorienta"><tld/>ujo orienta</ref>
      <rim>
        Fakte, en Japanujon &gcirc;i estis enportita el &Ccirc;inujo.
      </rim>
      <trd lng="nl">Japanse <ind>persimmon</ind></trd>
    </drv>

    <drv mrk="persimon.0ujovirginia">
      <kap><tld/>ujo virginia</kap>
      <uzo tip="fak">BOT</uzo>
      <snc>
        <dif>
          La specio de <tld/>ujo komuna en la sudo de Usono.
        </dif>
      </snc>
      <trdgrp lng="hu">
        <trd>amerikai <ind>kakiszilva</ind></trd>,
        <trd>amerikai <ind>datolyaszilva</ind></trd>
      </trdgrp>
      <trd lng="la">Diospyros virginiana</trd>
      <trd lng="nl">Amerikaanse <ind>persimmon</ind></trd>
      <trd lng="ru">&c_h;&c_u;&c_r;&c_m;&c_a;
        &c_v;&c_i;&c_r;&c_g;&c_i;&c_n;&c_s;&c_k;&c_a;&c_ja;</trd>
    </drv>

  </art>

