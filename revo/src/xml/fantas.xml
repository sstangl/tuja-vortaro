<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: fantas.xml,v 1.16 2015/07/04 08:37:34 revo Exp $">
<kap>
  <rad>fantasmagori</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="fantas.0o">
  <kap><tld/>o</kap>
  <snc mrk="fantas.0o.KIN">
    <uzo tip="fak">HIS</uzo>
    <uzo tip="fak">KIN</uzo>
    <dif>
      Arto de projekcio de bildoj per diversaj
      lumfontoj kaj tra diversaj lensoj
      en malluma &ccirc;ambro, populara precipe en
      la 18a jarcento en E&ubreve;ropo.
    </dif>
    <trd lng="de">Phantasmorgie</trd>
    <trdgrp lng="hu">
      <trd>r&eacute;mk&eacute;p</trd>,
      <trd>r&eacute;ml&aacute;tom&aacute;s</trd>
    </trdgrp>
    <trd lng="pt">fantasmagoria</trd>
  </snc>
  <snc mrk="fantas.0o.BELA">
    <uzo tip="stl">FIG</uzo>
    <uzo tip="fak">BELA</uzo>
    <dif>
      Efektoj produktataj per iluziigaj rimedoj
      en beletro kaj belartoj.
    </dif>
    <trdgrp lng="de">
     <trd>Phantasmorgie</trd>,
     <trd>Truggebilde</trd>,
     <trd>Blendwerk</trd></trdgrp>
    <trdgrp lng="hu">
     <trd>szemf&eacute;nyveszt&eacute;s</trd>,
     <trd>fantazmag&oacute;ria</trd></trdgrp>
    <trdgrp lng="pt">
      <trd>quimera <klr tip="amb">(fig.)</klr></trd>,
      <trd>miragem <klr tip="amb">(fig.)</klr></trd>
    </trdgrp>
  </snc>
  <trd lng="be">&c_f;&c_a;&c_n;&c_t;&c_a;&c_s;&c_m;&c_a;&c_g;&c_o;&c_r;&c_y;&c_ja;</trd>
  <trdgrp lng="cs">
    <trd>kouzlo</trd>,
    <trd>přelud</trd>,
    <trd>vidina</trd>
  </trdgrp>
  <trd lng="en">phantasmagoria</trd>
  <trd lng="fr">fantasmagorie</trd>
  <trd lng="nl">fantasmagorie</trd>
  <trd lng="ru">&c_f;&c_a;&c_n;&c_t;&c_a;&c_s;&c_m;&c_a;&c_g;&c_o;&c_r;&c_i;&c_ja;</trd>
  <trdgrp lng="sk">
    <trd>kúzlo</trd>,
    <trd>prelud</trd>,
    <trd>vidina</trd>
  </trdgrp>
</drv>
</art>
