</kap>

<drv mrk="edz.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="edz.0o.GEN">
    <uzo tip="fak">GEN</uzo>
    <dif>
      Viro la&ubreve;le&gcirc;e ligita kun alia homo por kunvivado kaj
      fondo de familio:
      <ekz>
        sed al sia <tld/>o Nabal &scirc;i nenion diris
        <fnt><bib>MT</bib>, <lok>&Sa1; 25:19</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_m;&c_u;&c_zh;</trd>
  <trdgrp lng="bg">
    <trd>&c_s;&c_malmol;&c_p;&c_r;&c_u;&c_g;</trd>,
    <trd>&c_m;&c_malmol;&c_zh;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>choť</trd>,
    <trd>man&zcaron;el</trd>,
    <trd>muž</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Ehemann</trd>,
    <trd>Gatte</trd>,
    <trd>Gemahl</trd>,
    <trd>Mann</trd>
  </trdgrp>
  <trd lng="en">husband</trd>
  <trdgrp lng="es">
     <trd>marido</trd>,
     <trd>esposo</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>&eacute;poux<klr tip="ind"> (mari)</klr></trd>,
    <trd>mari</trd>
  </trdgrp>
  <trd lng="hu">f&eacute;rj</trd>
  <trd lng="id">suami</trd>
  <trd lng="ku">bijin</trd>
  <trdgrp lng="nl">
    <trd>echtgenoot</trd>,
    <trd>man<klr tip="ind"> (echtgenoot)</klr></trd>
  </trdgrp>
  <trdgrp lng="pl">
   <trd>m&aogonek;&zdot;</trd>,
   <trd>ma&lstroke;&zdot;onek</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>marido</trd>,
    <trd>esposo</trd>,
    <trd>c&ocirc;njuge</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_m;&c_u;&c_zh;</trd>,
    <trd>&c_s;&c_u;&c_p;&c_r;&c_u;&c_g;</trd>
  </trdgrp>
  <trd lng="sk">manžel</trd>
  <trd lng="tp">mije</trd>
  <trdgrp lng="tr">
    <trd>koca</trd>,
    <trd>e&scedil;</trd>,
     <trd>evli</trd>
  </trdgrp>
</drv>

<drv mrk="edz.0ino">
  <kap><tld/>ino</kap>
  <snc mrk="edz.0ino.GEN">
    <uzo tip="fak">GEN</uzo>
    <dif>
      Virino la&ubreve;le&gcirc;e ligita kun alia homo por kunvivado kaj
      fondo de familio:
      <ekz>
        Re&hcirc;abeam prenis al si kiel <tld/>inon Ma&hcirc;alaton
        <fnt><bib>MT</bib>, <lok>&Kr2; 11:18</lok></fnt>;
      </ekz>
      <ekz>
        <tld/>o kaj <tld/>ino estas ge<tld/>oj.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_zh;&c_o;&c_n;&c_k;&c_a;</trd>
  <trdgrp lng="bg">
    <trd>&c_s;&c_malmol;&c_p;&c_r;&c_u;&c_g;&c_a;</trd>,
    <trd>&c_zh;&c_je;&c_n;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>manželka</trd>,
    <trd>paní</trd>,
    <trd>žena</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Ehefrau</trd>,
    <trd>Gattin</trd>,
    <trd>Gemahlin</trd>,
    <trd>Frau</trd>
  </trdgrp>
  <trd lng="en">wife</trd>
  <trdgrp lng="es">
    <trd>esposa</trd>,
    <trd>mujer</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>&eacute;pouse</trd>,
    <trd>femme<klr tip="ind"> (&eacute;pouse)</klr></trd>
  </trdgrp>
  <trd lng="hu">feles&eacute;g</trd>
  <trd lng="id">istri</trd>
  <trd lng="ku">bim&ecirc;r</trd>
  <trdgrp lng="nl">
    <trd>echtgenote</trd>,
    <trd>vrouw<klr tip="ind"> (echtgenote)</klr></trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>&zdot;ona</trd>,
    <trd>ma&lstroke;&zdot;onka</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>mulher <klr tip="amb">(esposa)</klr></trd>,
    <trd>esposa</trd>,
    <trd>c&ocirc;njuge</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_zh;&c_je;&c_n;&c_a;</trd>,
    <trd>&c_s;&c_u;&c_p;&c_r;&c_u;&c_g;&c_a;</trd>
  </trdgrp>
  <trd lng="sk">manželka</trd>
  <trd lng="tp">meli</trd>
  <trdgrp lng="tr">
    <trd>kar&inodot;</trd>,
    <trd>e&scedil;</trd>,
    <trd>evli</trd>
  </trdgrp>
</drv>

<drv mrk="edz.0igi">
  <kap><tld/>igi</kap>
  <snc>
    <dif>
      Fari iun <tld/>o per la&ubreve;le&gcirc;a a&ubreve; religia
      ligo:
      <ekz>
        la gepatroj <tld/>igis la filon<fnt>B</fnt>;
      </ekz>
      <ekz>
        se li estas <tld/>igita, tiam lia <tld/>ino
        eliru kune kun li
        <fnt><bib>MT</bib>, <lok>&Eli; 21:3</lok></fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_u;&c_z;&c_ja;&c_c;&c_mol; &c_z;&c_a; &c_m;&c_u;&c_zh;&c_a;</trd>
    <trdgrp lng="fr">
      <trd>marier<klr tip="ind"> (prendre en mariage)</klr></trd>,
      <trd>&eacute;pouser</trd>,
      <trd>prendre en <ind>mariage</ind></trd>
    </trdgrp>
    <trd lng="de">heiraten</trd>
    <trd lng="hu">elvesz<klr tip="ind"> 
    (f&eacute;rj&uuml;l/feles&eacute;g&uuml;l)</klr></trd>
    <trd lng="id">[<ind>nikah</ind>] menikahi</trd>
    <trd lng="tr">evlendirmek</trd>
  </snc>
  <snc>
    <dif>
      Doni kiel <tld/>on:
      <ekz>
        la familio volis <tld/>igi lin al unu kuzino, kies
        firma karaktero estis bone konata
        <fnt>
          <aut>G. Waringhien</aut>, 
          <vrk>Pa&ubreve;lo Verlaine</vrk>.
          <lok>Nica Literatura Revuo, 1957-11 &gcirc;is 13 (3:2)</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_a;&c_zh;&c_a;&c_n;&c_ib;&c_c;&c_mol;</trd>
    <trdgrp lng="de">
      <trd>verheiraten</trd>,
      <trd>verm&auml;hlen</trd>
    </trdgrp>
    <trdgrp lng="fr">
      <trd>marier<klr tip="ind"> (donner en mariage)</klr></trd>,
      <trd>donner en <ind>mariage</ind></trd>
    </trdgrp>
    <trdgrp lng="hu">
      <trd>megh&aacute;zas&iacute;t<klr tip="ind"> 
      (f&eacute;rfit/n&odblac;t)</klr></trd>,
      <trd>hozz&aacute;ad<klr tip="ind"> 
      (f&eacute;rj&uuml;l/n&odblac;&uuml;l)</klr></trd>
    </trdgrp>
  </snc>
  <trdgrp lng="cs">
    <trd>oddat <klr>(s někým)</klr></trd>,
    <trd>oženit</trd>,
    <trd>ženit</trd>
  </trdgrp>
  <trd lng="en">marry</trd>
  <trd lng="es">casar (a un hombre)</trd>
  <trd lng="id">[<ind>nikah</ind>] menikahkan</trd>
  <trd lng="nl">uithuwelijken</trd>
  <trdgrp lng="pl"> 
    <trd>&zdot;eni&cacute;</trd>,
    <trd>o&zdot;eni&cacute;</trd>,
    <trd>swata&cacute;</trd>,
    <trd>wyswata&cacute;</trd>
  </trdgrp>
  <trd lng="ru">&c_zh;&c_je;&c_n;&c_i;&c_t;&c_mol;</trd>
  <trd lng="sk">oženiť <klr>(z niekým)</klr></trd>
</drv>

<drv mrk="edz.0iga">
  <kap><tld/>iga</kap>
  <snc>
    <dif>
      Rilata al <tld/>igo:
      <ekz>
        <tld/>iga promeso<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="edz.0iga.geedzigxa">
    <uzo tip="stl">EVI</uzo>
    <dif>
      <ref tip="sin" cel="edz.ge0igxi">Ge<tld/>i&gcirc;a</ref>:
      <ekz>
        <tld/>iga ceremonio<fnt>Z</fnt>,
        formulo<fnt>Z</fnt>, ringo<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="pl">
	<trd>weselny</trd>,
	<trd>&sacute;lubny</trd>
  </trdgrp>
  <trd lng="ru">&c_b;&c_r;&c_a;&c_ch;&c_n;&c_y;&c_j;</trd>
</drv>

<drv mrk="edz.0inigi">
  <kap><tld/>inigi</kap>
  <snc mrk="edz.0inigi.doni">
    <dif>
      Fari iun ies <tld/>ino per la&ubreve;le&gcirc;a a&ubreve; 
      religia ligo:
      <ekz>
        tial la onklino konstante paroladis: al Eminjo mi
        donos bonan edukon kaj poste mi &scirc;in bone 
        <tld/>inigos...
        <fnt><bib>Marta</bib></fnt>;
      </ekz>
      <ekz>
        &scirc;iaj gepatroj volis &scirc;in <tld/>inigi kun alia 
        persono
        <fnt><bib>F</bib>, <lok>&FE;39.</lok></fnt>;
      </ekz>
      <ekz>
        li havis tridek filojn, kaj tridek filinojn li
        <tld/>inigis eksteren, kaj tridek filinojn li prenis
        el ekstere por siaj filoj
        <fnt><bib>MT</bib>, <lok>&Jug; 12:9</lok></fnt>;
      </ekz>
      <ekz>
        prenu edzinojn por viaj filoj kaj <tld/>inigu viajn
        filinojn, por ke ili nasku filojn kaj filinojn
	<fnt><bib>MT</bib>, <lok>&Jer; 29:6</lok></fnt>;
      </ekz>
      <ekz>
        Temistoklo <tld/>inigis sian filinon je homo tre bona,
        sed malri&ccirc;a <fnt><bib>FK</bib></fnt>;
      </ekz>
      <ekz>
        <ctl>Kaj la plej alta konsilantaro de la tiraj pastroj?...
        </ctl>
        &#8208; &leftquot;&Gcirc;i povas nur <tld/>inigi min...&rightquot;
	<fnt><bib>Far2</bib>, <lok>&ccirc;ap. 9a.</lok></fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_v;&c_y;&c_d;&c_a;&c_c;&c_mol; &c_z;&c_a;&c_m;&c_u;&c_zh;</trd>
    <trdgrp lng="de">
      <trd>verheiraten</trd>,
      <trd>verm&auml;hlen</trd>
    </trdgrp>
    <trdgrp lng="fr">
      <trd>marier<klr tip="ind"> (donner en mariage)</klr></trd>,
      <trd>donner en <ind>mariage</ind></trd>
    </trdgrp>
    <trdgrp lng="hu">
      <trd>megh&aacute;zas&iacute;t<klr tip="ind"> 
      (f&eacute;rfit/n&odblac;t)</klr></trd>,
      <trd>hozz&aacute;ad<klr tip="ind"> 
      (f&eacute;rj&uuml;l/n&odblac;&uuml;l)</klr></trd>
    </trdgrp>
    <trd lng="es">casar (a una mujer)</trd>
    <trdgrp lng="pl">
      <trd>wyda&cacute; za m&aogonek;&zdot;</trd>,
      <trd>wyswata&cacute;</trd>
    </trdgrp>
    <trd lng="ru">&c_v;&c_y;&c_d;&c_a;&c_t;&c_mol; &c_z;&c_a;&c_m;&c_u;&c_zh;</trd>
  </snc>
  <snc mrk="edz.0inigi.preni">
    <dif>
      <tld lit="E"/>i&gcirc;i al iu:
      <ekz>
        donu mian edzinon Mi&hcirc;al, kiun mi <tld/>inigis al mi
        per cent prepucioj de Fili&scirc;toj
        <fnt><bib>MT</bib>, <lok>&Sa2; 3:14</lok></fnt>;
      </ekz>
      <ekz>
        memkompreneble mi <tld/>inigis &scirc;in al mi
	<fnt>
          <bib>SatirRak</bib>
          <lok>Tria pre&gcirc;o de Pygmalion</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi <tld/>inigis al mi tri re&gcirc;idinojn de orientaj regnoj
        <fnt>
          <aut>K. &Ccaron;apek, trad. J. Vondrou&scaron;ek</aut>:
          <vrk>Aleksandro la Granda</vrk>,
          <lok>Libro de apokrifoj, 1969</lok>
        </fnt>.
      </ekz>
    </dif>
    <rim>
      Tia uzo postulas malimplican refleksivan komplementon:
      <tld/>inigi iun <em>al si</em>, kaj povas havi aktivan,
      eventuale e&ccirc; iom perfortan nuancon.  Pli normala 
      dirmaniero estas la pli simpla &leftquot;<tld/>i&gcirc;i al 
      iu&rightquot; a&ubreve; (pli bone)
      &leftquot;sin <tld/>igi al iu&rightquot;.
    </rim>
    <trd lng="be">&c_u;&c_z;&c_ja;&c_c;&c_mol; &c_z;&c_a; &c_zh;&c_o;&c_n;&c_k;&c_u;</trd>
    <trdgrp lng="fr">
      <trd>marier<klr tip="ind"> (prendre en mariage)</klr></trd>,
      <trd>&eacute;pouser</trd>,
      <trd>prendre en <ind>mariage</ind></trd>
    </trdgrp>
    <trd lng="de">heiraten</trd>
    <trd lng="hu">elvesz<klr tip="ind"> 
    (f&eacute;rj&uuml;l/feles&eacute;g&uuml;l)</klr></trd>
    <trdgrp lng="pl">
      <trd>bra&cacute; za &zdot;on&eogonek;</trd>,
      <trd>pojmowa&cacute; za &zdot;on&eogonek;</trd>
    </trdgrp>
    <trd lng="ru">&c_v;&c_z;&c_ja;&c_t;&c_mol; &c_v; &c_zh;&c_jo;&c_n;&c_y;</trd>
  </snc>
  <trdgrp lng="cs">
    <trd>provdat <klr>(za někoho)</klr></trd>,
    <trd>vdát</trd>
  </trdgrp>
  <trd lng="en">marry</trd>
  <trd lng="nl">uithuwelijken</trd>
  <trd lng="sk">vydať <klr>(za niekoho)</klr></trd>
</drv>

<drv mrk="edz.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <uzo tip="klr">(kun, al)</uzo>
  <snc>
    <dif>
      I&gcirc;i <tld/>o:
      <ekz>
        la re&gcirc;ido <klr>...</klr> forkondukis &scirc;in
        al la palaco de sia patro <klr>...</klr>, kie li 
        <tld/>i&gcirc;is je &scirc;i
        <fnt><bib>F</bib>, <lok>&FE; 23</lok></fnt>.</ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_a;&c_zh;&c_a;&c_n;&c_ib;&c_c;&c_c;&c_a;</trd>,
    <trd>&c_p;&c_a;&c_b;&c_r;&c_a;&c_c;&c_c;&c_a; <klr>(&c_z; &c_k;&c_ib;&c_m;&c_s;&c_mol;&c_c;&c_ib;)</klr></trd>
  </trdgrp>
  <trd lng="de">heiraten</trd>
  <trd lng="en">get married</trd>
  <trd lng="es">casar se (un hombre)</trd>
  <trdgrp lng="fr">
    <trd>&eacute;pouser</trd>,
    <trd>se <ind>marier</ind></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>hozz&aacute;megy<klr tip="ind"> 
    (f&eacute;rj&uuml;l/n&odblac;&uuml;l)</klr></trd>,
    <trd>megn&odblac;s&uuml;l</trd>,
    <trd>f&eacute;rjhez megy</trd>,
    <trd>megh&aacute;zasodik</trd>,
  </trdgrp>
  <trd lng="id">[<ind>nikah</ind>] menikah</trd>
  <trdgrp lng="nl">
    <trd>huwen</trd>,
    <trd>trouwen</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>&zdot;eni&cacute; si&eogonek;</trd>,
    <trd>o&zdot;eni&cacute; si&eogonek;</trd>
  </trdgrp>
  <trd lng="ru">&c_zh;&c_je;&c_n;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
  <trd lng="tr">evlenmek</trd>
</drv>

