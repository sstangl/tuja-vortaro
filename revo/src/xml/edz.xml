  <trd lng="pl">panna m&lstroke;oda</trd>
  <trdgrp lng="ru">
    <trd>&c_n;&c_o;&c_v;&c_o;&c_b;&c_r;&c_a;&c_ch;&c_n;&c_a;&c_ja;</trd>,
    <trd>&c_m;&c_o;&c_l;&c_o;&c_d;&c_a;&c_ja;</trd>
  </trdgrp>
  <trd lng="sk">novomanželka</trd>
</drv>

<drv mrk="edz.novge0oj">
