    <trd>&c_m;&c_o;&c_l;&c_o;&c_d;&c_o;&c_zh;&c_jo;&c_n;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>novo ženáč</trd>,
    <trd>novomanžel</trd>
  </trdgrp>
</drv>

<drv mrk="edz.nov0ino">
  <kap>nov<tld/>ino</kap>
  <snc mrk="edz.nov0ino.MOR">
    <dif>
      &Jcirc;us <tld/>ini&gcirc;inta ino:
      <ekz>
        &leftquot;Kisu la nov<tld/>inon!&rightquot; Vilcjo tondris, kaj
        Sturges Owen ne havis la forton malobei
        <fnt>
          <aut>J. London, trad. R. Rossetti</aut>:
          <vrk>Dio de liaj prapatroj</vrk>.
          <lok>Nica Literatura Revuo, 1956-03 &gcirc;is 04 (1:4)</lok>.
        </fnt>
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">novomanželka</trd>
  <trd lng="es">reci&eacute;n casada</trd>
