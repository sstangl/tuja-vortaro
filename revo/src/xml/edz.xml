  </trdgrp>
  <trd lng="pl">druga <ind>&zdot;ona</ind></trd>
  <trd lng="ru">&c_m;&c_l;&c_a;&c_d;&c_sh;&c_a;&c_ja; &c_zh;&c_je;&c_n;&c_a;</trd>
  <trd lng="sk">v polygamnom systéme druhá manželka</trd>
</drv>

<drv mrk="edz.nov0o">
  <kap>nov<tld/>o</kap>
  <snc mrk="edz.nov0o.MOR">
    <dif>
      &Jcirc;us <tld/>i&gcirc;inta viro:
      <ekz>
        la gepatroj de la nov<tld/>o <klr>...</klr> devas 
        alporti ora&jcirc;ojn kaj vesta&jcirc;ojn por sia bofilino
        <fnt>
          <aut>Saeed</aut>,
          <vrk>Silenti signifas konsenti</vrk>,
          <lok>en: Vivprotokoloj, 2009</lok>
        </fnt>.
