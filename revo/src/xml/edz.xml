  </snc>
  <trd lng="cs">novomanželé</trd>
  <trd lng="es">reci&eacute;n casados</trd>
  <trd lng="id"><ind>pengantin</ind> baru</trd>
  <trdgrp lng="pl">
    <trd>pa&nacute;stwo m&lstroke;odzi</trd>,
    <trd>nowo&zdot;e&nacute;cy</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_n;&c_o;&c_v;&c_o;&c_b;&c_r;&c_a;&c_ch;&c_n;&c_y;&c_je;</trd>,
    <trd>&c_m;&c_o;&c_l;&c_o;&c_d;&c_o;&c_zh;&c_jo;&c_n;&c_y;</trd>
  </trdgrp>
  <trd lng="sk">novomanželia</trd>
</drv>

<drv mrk="edz.plur0eco">
  <kap>plur<tld/>eco</kap>
  <snc mrk="edz.plur0eco.GEN">
    <uzo tip="fak">GEN</uzo>
    <dif>
      Havo de pluraj <tld/>oj samtempe;
      <ref tip="sin" cel="poliandri.0o.GEN">poliandrio<sncref/></ref>:
      <ekz>
        kvankam multaj sektoj subtenas plur<tld/>inecon, ili ne 
        subtenas plur<tld/>econ        
        <fnt>
          <aut>Jonatan</aut>,
          <vrk><url
          ref="http://groups.yahoo.com/group/esperanto-l/message/73317">
          Viaj infanoj estas niaj</url></vrk>,
          <lok>2008-04-19</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="fr">polyandrie</trd>
    <trd lng="id">poliandri</trd>
    <trd lng="es">poliandria</trd>
  </snc>
  <snc mrk="edz.plur0eco.poligamio">
    <uzo tip="stl">EVI</uzo>
    <ref tip="dif" cel="poliga.0o.GEN">poligamio</ref>
    <ekz>
      plur<tld/>eco estas ge<tld/>a praktiko, kie unu persono havas pli
      ol 
      unu <tld/>on a&ubreve; <tld/>inon samtempe
      <fnt>
        <bib>Viki</bib>,
        <lok><url ref="http://eo.wikipedia.org/wiki/Poligamio">
        poligamio</url>, 2010-12-26</lok>
      </fnt>.
    </ekz>
  </snc>
  <trdgrp lng="cs">
    <trd>mnohomužství</trd>,
    <trd>polyandrie</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>mnohomužstvo</trd>,
    <trd>plyandria</trd>
  </trdgrp>
</drv>

<drv mrk="edz.plur0ineco">
  <kap>plur<tld/>ineco</kap>
  <snc mrk="edz.plur0ineco.GEN">
