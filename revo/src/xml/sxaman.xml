<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: sxaman.xml,v 1.16 2013/09/22 19:11:12 revo Exp $">
<kap>
  <rad>&scirc;aman</rad>/o<fnt>B</fnt>
</kap>

<drv mrk="sxaman.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">REL</uzo>
  <snc>
    <dif>
      En <tld/>ismo, <ref tip="super" cel="medium.0o">mediumo</ref>
      kiu kombinas la funkciojn de
      <ref tip="super" cel="pastr.0o.gxenerale">pastro</ref>,
      kuracisto, sor&ccirc;isto kaj
      <ref tip="super" cel="diven.0isto">divenisto</ref>:
      <ekz>
        proksime en la arbarego trovi&gcirc;is, iomete ka&scirc;ita, la
        kabaneto kun la sankta klaketilo de la <tld/>o
        <fnt>
          <aut>Werner Schad</aut>,
          <vrk>Orinoko-delto: Indianoj, mar&ccirc;oj, arbarego</vrk>,
          <bib>Monato</bib><lok>jaro 2000a, numero 11a, p. 20a</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="bg">&c_sh;&c_a;&c_m;&c_a;&c_n;</trd>
    <trdgrp lng="de">
      <trd>Schamane</trd>,
      <trd>Medizinmann</trd>
    </trdgrp>
    <trd lng="be">&c_sh;&c_a;&c_m;&c_a;&c_n;</trd>
    <trd lng="en">shaman</trd>
    <trd lng="fr">chaman</trd>
    <trdgrp lng="hu">
      <trd>s&aacute;m&aacute;n</trd>,
      <trd>t&aacute;ltos</trd>
    </trdgrp>
    <trd lng="it">sciamano</trd>
    <trd lng="nl">sjamaan</trd>
    <trd lng="pl">szaman</trd>
    <trd lng="pt">xam&atilde;</trd>
    <trd lng="ru">&c_sh;&c_a;&c_m;&c_a;&c_n;</trd>
    <trd lng="sv">schaman</trd>
  </snc>
</drv>

<drv mrk="sxaman.0ismo">
  <kap><tld/>ismo</kap>
  <uzo tip="fak">REL</uzo>
  <snc>
    <dif>
      Animisma <ref tip="lst" cel="religi.0o.REL"
      lst="voko:religioj">religio</ref>
      de kelkaj indi&gcirc;enaj popoloj en Siberio, Nord-Ameriko kaj 
      &Ccirc;inio.
    </dif>
    <trd lng="be">&c_sh;&c_a;&c_m;&c_a;&c_n;&c_ib;&c_z;&c_m;</trd>
    <trd lng="de">Schamanismus</trd>
    <trd lng="en">shamanism</trd>
    <trd lng="es">chamanismo</trd>
    <trd lng="fr">chamanisme</trd>
    <trd lng="hu">s&aacute;m&aacute;nizmus</trd>
    <trd lng="it">sciamanismo</trd>
    <trd lng="nl">sjamanisme</trd>
    <trd lng="pl">szamanizm</trd>
    <trd lng="pt">xamanismo</trd>
    <trd lng="ru">&c_sh;&c_a;&c_m;&c_a;&c_n;&c_s;&c_t;&c_v;&c_o;</trd>
    <trd lng="sv">schamanism</trd>
  </snc>
</drv>
</art>
